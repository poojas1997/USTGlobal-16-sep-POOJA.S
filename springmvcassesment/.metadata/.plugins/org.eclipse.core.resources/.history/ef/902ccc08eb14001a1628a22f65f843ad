package com.ustglobal.springmvcassesment.dao;

import java.util.List;

import javax.persistence.EntityManager;
import javax.persistence.EntityManagerFactory;
import javax.persistence.Persistence;
import javax.persistence.Query;

import org.springframework.stereotype.Repository;

import com.ustglobal.springmvcassesment.dto.Product;
@Repository
public class InsertProduct {

	public static void main(String[] args) {
			
			EntityManagerFactory entityManagerFactory = Persistence.createEntityManagerFactory("TestPersistence");
			EntityManager entityManager = entityManagerFactory.createEntityManager();
			
			String jpql = "insert into product values ( pname = 'Book'quantity=20 price=100),( pname = 'Rice'quantity=10 price=72),( pname = 'Dal'quantity=12 price=56)";
			Query query = entityManager.createQuery(jpql);
			
			
			List<Product> list =  query.getResultList();
			
			for(Product product : list) {
				System.out.println(product.getPname());
				System.out.println(product.getQuantity());
				System.out.println(product.getPrice());
				System.out.println("=======================");
			}
			
			entityManager.close();
			
		}//end of main
	}//end of InsertDemo

